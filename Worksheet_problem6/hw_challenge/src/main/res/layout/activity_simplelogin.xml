<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simplelogin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4"
    android:rowCount="9"
    android:orientation="horizontal"
    tools:context="com.example.hw_challenge.simplelogin">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Simple Login"
            android:textSize="130dp"
            android:textStyle="bold"
            android:id="@+id/tvsimple_login"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="User"
            android:textSize="30dp"
            android:id="@+id/tvUser"
            android:textStyle="bold"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pass"
            android:textStyle="bold"
            android:textSize="30dp"
            android:id="@+id/tvpsw"
            android:layout_row="6"
            android:layout_column="0" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUser"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="20dp"
            android:hint="&lt;Please input username here>"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtpsw"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="20dp"
            android:hint="&lt;Please Input Password Here>"
            android:paddingLeft="10dp" />



        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/btnClicktoSubmit"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_rowSpan="1"
            android:layout_marginBottom="90dp"
            />




</GridLayout>
