<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_simplelogin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="4"
    android:rowCount="10"
    android:orientation="horizontal"
    tools:context="com.example.hw_challenge.simplelogin">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Simple Login"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tvsimple_login"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="User"
            android:textSize="20sp"
            android:id="@+id/tvUser"
            android:textStyle="bold"
            android:layout_row="5"
            android:layout_column="0"
            android:gravity="center"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tvpsw"
            android:layout_row="6"
            android:layout_column="0"
            android:gravity="center"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtUser"
            android:layout_row="5"
            android:layout_column="1"
            android:textSize="20sp"
            android:hint="User name"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edtpsw"
            android:layout_row="6"
            android:layout_column="1"
            android:textSize="20sp"
            android:hint="password"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:gravity="center"
            />



        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/btnClicktoSubmit"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="13sp"
            android:id="@+id/btnClicktoRegister"
            android:layout_row="9"
            android:layout_column="1"
            android:layout_marginBottom="200dp"
            />




</GridLayout>
